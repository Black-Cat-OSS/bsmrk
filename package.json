{
	"name": "bismark-js",
	"version": "1.0.0",
	"description": "A powerful directory analyzer that detects programming languages, frameworks, and ignored files",
	"license": "ISC",
	"author": "",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.esm.js",
	"browser": "dist/index.umd.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.esm.js",
			"require": "./dist/index.cjs",
			"browser": "./dist/index.umd.js"
		}
	},
	"files": [
		"dist/",
		"README.md",
		"LICENSE.md"
	],
	"keywords": [
		"directory-analyzer",
		"language-detection",
		"framework-detection",
		"file-scanner",
		"code-analysis"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/bismark-js.git"
	},
	"scripts": {
		"build": "rollup -c",
		"build:watch": "rollup -c --watch",
		"prepublishOnly": "npm run build",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"test:ui": "vitest --ui",
		"test:unit": "vitest run tests/unit/",
		"test:integration": "vitest run tests/integration/",
		"test:performance": "vitest run tests/unit/performance.test.js",
		"test:edge": "vitest run tests/unit/edge-cases.test.js",
		"test:verbose": "vitest run --reporter=verbose",
		"test:debug": "node --inspect-brk node_modules/vitest/vitest.mjs run",
		"test:clean": "rm -rf coverage/ test-results.* .nyc_output/",
		"test:runner": "node scripts/test-runner.js"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-json": "^6.0.1",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@vitest/coverage-v8": "^1.0.0",
		"@vitest/ui": "^1.0.0",
		"rollup": "^4.9.1",
		"vitest": "^1.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
